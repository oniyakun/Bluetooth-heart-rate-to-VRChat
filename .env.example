# 蓝牙心率到VRChat OSC配置文件
# 复制此文件为 .env 并修改相应的值

# OSC设置
OSC_IP=127.0.0.1
OSC_PORT=9000

# 蓝牙设置
BLUETOOTH_SCAN_TIMEOUT=10.0
BLUETOOTH_DEVICE_ADDRESS=
AUTO_CONNECT_LAST_DEVICE=true

# 心率数据设置
HEART_RATE_MIN=40
HEART_RATE_MAX=200
HEART_RATE_SMOOTHING=false
SMOOTHING_WINDOW_SIZE=5

# 连接设置
RECONNECT_ATTEMPTS=3
RECONNECT_DELAY=5.0
KEEPALIVE_INTERVAL=30.0

# 数据超时设置
DATA_TIMEOUT=10.0
ENABLE_AUTO_RECONNECT_ON_TIMEOUT=true
MAX_TIMEOUT_RECONNECT_ATTEMPTS=5

# 日志设置
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=bluetooth_heartrate.log

# 设备过滤设置
DEVICE_NAME_FILTER=
RSSI_THRESHOLD=-80

# Chatbox设置
ENABLE_CHATBOX=false
CHATBOX_MESSAGE_FORMAT=心率：{heart_rate}
CHATBOX_SEND_INTERVAL=2.0